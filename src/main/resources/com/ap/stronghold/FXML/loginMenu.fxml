<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.CheckBox?>
<VBox id="LoginMenu" prefHeight="700.0" prefWidth="1100.0"
      stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ap.stronghold.view.LoginMenu"
      alignment="CENTER" spacing="15">

    <TextField promptText="username" fx:id="username"/>
    <PasswordField promptText="password" fx:id="password"/>
    <Hyperlink text="forgot your password" onAction="#forgotPassword"/>
    <CheckBox text="stay logged in?" fx:id="stayLoggedIn" textFill="white"/>
    <Text fx:id="error"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="back" styleClass="button1" onAction="#back"/>
        <Button text="login" styleClass="button1" onAction="#signIn"/>
    </HBox>
</VBox>
